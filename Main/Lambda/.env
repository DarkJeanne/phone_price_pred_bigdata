# --- Kafka Configuration ---
KAFKA_BOOTSTRAP_SERVERS_EXTERNAL_PORT=9094
KAFKA_BROKER_INTERNAL=kafka:9092
KAFKA_SMARTPHONE_TOPIC=smartphoneTopic
HDFS_CONSUMER_GROUP_ID=hdfs_consumer_group
ML_CONSUMER_GROUP_ID=ml_consumer_group

# --- MongoDB Configuration ---
# Primary connection URI - Spark job will use this to connect to Atlas
MONGO_CONNECTION_URI="mongodb+srv://nongvandenhoc:hoangtu1234@cluster0.tqiqnnk.mongodb.net/MySmartphoneDB?retryWrites=true&w=majority"

# Database and Collection names for Spark job output on Atlas.
# The MONGO_DB_NAME specified here will be the target database on your Atlas cluster for Spark writes.
MONGO_DB_NAME=BigDataSmartphoneDB
MONGO_TRANSFORMED_SMARTPHONE_COLLECTION=smartphonesTransformedBatch

# Variables for initializing the LOCAL MongoDB container (used by docker-compose for the 'mongodb' service)
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=examplepass
# MONGO_HOST=mongodb  # Not needed by Spark if MONGO_CONNECTION_URI is set for Atlas
# MONGO_PORT=27017    # Not needed by Spark if MONGO_CONNECTION_URI is set for Atlas

# --- HBase Configuration ---
